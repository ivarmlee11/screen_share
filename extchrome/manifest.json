{
  "name": "Free Screen Share",
  "author": "Ivar Lee",
  "version": "0.1", 
  "manifest_version": 2,
  "minimum_chrome_version": "34",
  "description" : "Free screen sharing extension",
  "background": {
    "scripts": ["bundled/background-script.bundle.js"]
  },
  "browser_action": {
    "default_icon": "./icon/eye16.png",
    "default_title": "Free Screen Share"
  },
  "content_scripts": [
    {
     "js": ["bundled/content-script.bundle.js" ],
     "all_frames": true,
     "run_at": "document_end",
     "matches": ["http://localhost:3000/*"]
     // "matches": ["http://freescreenshare.herokuapp.com/*"]
    }
  ],
  "icons" : {
    "16" : "icon/eye16.png"
  },
  "permissions": [
    "desktopCapture"
  ],
  "web_accessible_resources": [
    "icon/eye16.png"
  ]
}
